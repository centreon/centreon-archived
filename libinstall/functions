        echo_success "$(gettext "Path" ) $INSTALL_DIR_CENTREON" "$ok"
    fi
    INSTALL_DIR_CENTREON=`trim ${INSTALL_DIR_CENTREON%/}`
    export INSTALL_DIR_CENTREON
    log "INFO" "INSTALL_DIR_CENTREON: $INSTALL_DIR_CENTREON"
}

