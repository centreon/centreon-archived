    INSTALL_DIR_CENTREON_CONF="$INSTALL_DIR_CENTREON/www/install/install.conf.php"
    # Reinit file if exist
    touch $INSTALL_DIR_CENTREON_CONF
	${CAT} << __EOT__ > $INSTALL_DIR_CENTREON_CONF
<?php
/*
