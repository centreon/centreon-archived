        if [ -d "/etc/logrotate.d" ] ; then
            LOGROTATE_D="/etc/logrotate.d"
        # Add most of init.d
        else
            answer_with_testdir "$(gettext "Where is your logrotate.d directory ?")" "$DEFAULT_LOGROTATE_D" "LOGROTATE_D"
            echo_success "Path $LOGROTATE_D" "$ok"
