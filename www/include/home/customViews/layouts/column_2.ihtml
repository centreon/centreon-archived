<div class='viewBody'>
	{if $widgetNumber != 0}
	<div class="widgetBody column_2">
		{foreach name=widgetId item=widget from=$widgets}		
			{if $widget.column == 0 || $widget.column > 1}
			<div class="portlet" name="portlet_{$widget.widget_id}">
				<div class="portlet-header"><span class='widgetTitle' id='title_{$widget.widget_id}'>{$widget.title}</span></div>					
				<div class="portlet-content" id="widget_cont_{$widget.widget_id}" style="overflow: auto;"></div>
			</div>
			{/if}
		{/foreach}
		<div class='portlet invisible-portlet'></div>
	</div>
	<div class="widgetBody column_2">	
		{foreach name=widgetId item=widget from=$widgets}		
			{if $widget.column == 1}
			<div class="portlet" name="portlet_{$widget.widget_id}">
				<div class="portlet-header"><span class='widgetTitle' id='title_{$widget.widget_id}'>{$widget.title}</span></div>					
				<div class="portlet-content" id="widget_cont_{$widget.widget_id}" style="overflow: auto;"></div>
			</div>
			{/if}
		{/foreach}
		<div class='portlet invisible-portlet'></div>
	</div>
	{else}
		 <div class="info_box">
            <h4><img src='./img/icones/16x16/help_button.png'> {$error_msg}</h4>
        </div>
	{/if}
</div>
