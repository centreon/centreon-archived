	 	<tr class="list_one"><td class="FormRowField"><img class="helpTooltip" name="tip_display_poller_listing">{$form.poller_listing.label}</td><td class="FormRowValue"><p class="oreonbutton">{$form.poller_listing.html}</p></td></tr>

		<!-- Config -->
