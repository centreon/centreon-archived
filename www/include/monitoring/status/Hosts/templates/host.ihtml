<script type="text/javascript" src="./include/common/javascript/tool.js"></script>
<form name='form'>
<input name="p" value="{$p}" type="hidden">
<input name="o" value="svc" type="hidden">
{assign var='nbCol' value='4'}
{if $criticalityUsed}
{assign var='nbCol' value='$nbCol+1'}
{/if}
{if $poller_listing}
{assign var='nbCol' value='$nbCol+1'}
{/if}
<table class="ajaxOption table">
  <tbody>
    <tr>
      <th colspan="{$nbCol}"><h5>Filters</h5></th>
    </tr>
	  <tr>
      <td><h4>{$statusHost}</h4></td>
      <td><h4>{$hostStr}</h4></td>
      <td><h4>{$form.statusFilter.label}</h4></td>
      {if $criticalityUsed}
          <td><h4>{$form.criticality.label}</h4></td>
      {/if}
      {if $poller_listing}
          <td><h4>{$pollerStr}</h4></td>
      {/if}
      <td><h4>{$hgStr}</h4></td>
    </tr>
    <tr>
      <td>{$form.statusHost.html}</td>
  		<td><input type='text' name='host_search' id='host_search'></td>
  		<td>{$form.statusFilter.html}</td>
          {if $criticalityUsed}       
          <td>{$form.criticality.html}</td>
          {/if}
  		{if $poller_listing}
  		<td><span id="instance_selected"></span></td>
  		{/if}
      <td><span id="hostgroups_selected"></span></td>
 	  </tr>
  </tbody>
</table>
<table class="ToolbarTable table">
  <tbody>
	<tr class="ToolbarTR">
		<td>
        <span class="consol_button">{$form.o1.html}</span>
        
        <div class="Toolbar_TDSelectAction_Top">
          <span class="consol_button"><div id="JS_monitoring_refresh" style="cursor:pointer" onclick="javascript:monitoring_refresh('');">{php}displaySvg("www/img/icons/refresh.svg", "var(--icons-fill-color)", 18, 18){/php}</div></span>
          <span class="consol_button"><div id="JS_monitoring_play" class="cachediv" style="cursor:pointer" onclick="javascript:monitoring_play('');">{php}displaySvg("www/img/icons/media_play.svg", "var(--icons-fill-color)", 20, 20){/php}</div></span>
          <span class="consol_button"><span id="JS_monitoring_play_gray">{php}displaySvg("www/img/icons/media_play.svg", "var(--icons-disabled-fill-color)", 18, 18){/php}</span></span>
          <span class="consol_button"><div class="" id="JS_monitoring_pause" style="cursor:pointer" onclick="javascript:monitoring_pause('');">{php}displaySvg("www/img/icons/media_pause.svg", "var(--icons-fill-color)", 20, 20){/php}</div></span>
          <span class="consol_button"><span id="JS_monitoring_pause_gray" class="cachediv">{php}displaySvg("www/img/icons/media_pause.svg", "var(--icons-disabled-fill-color)", 18, 18){/php}</span></span>
        </div>
		</td>
		<td id="pagination1" class="ToolbarPagination"></td>
		<td id="sel1" class="Toolbar_pagelimit"></td>
	</tr>
  </tbody>
</table>
<div id="forAjax"></div>
<table class="ToolbarTable table">
	<tr class="ToolbarTR">
		<td width="330">{$form.o2.html}</td>
		<td id="pagination2" class="ToolbarPagination"></td>
		<td id="sel2" class="Toolbar_pagelimit"></td>
	</tr>
</table>
{if isset($host_name)}
<input type='hidden' name='host_name' value='{$host_name}'>
{/if}
<input name='cmd' id='cmd' value='42' type='hidden'>
<input name='o' value='{$o}' type='hidden'>
<input type='hidden' id='limit' name='limit' value='{$limit}'>	
{$form.hidden}
</form>
