{
  "name": "centreon-cypress",
  "version": "21.04.0",
  "description": "centreon web package",
  "scripts": {
    "cypress:up": "UID=${UID} GID=${GID} docker-compose up --force-recreate --abort-on-container-exit --exit-code-from cypress",
    "cypress:local": "npx cypress run --config-file cypress.dev.json",
    "cypress:local:chrome": "npx cypress run --config-file cypress.dev.json -b chrome",
    "cypress:local:open": "npx cypress open --config-file cypress.dev.json"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@centreon/frontend-core": "github:centreon/frontend-core",
    "@cypress/webpack-preprocessor": "^5.5.0",
    "@types/cypress": "^1.1.3",
    "@types/cypress-cucumber-preprocessor": "^4.0.0",
    "@types/node": "^14.14.22",
    "babel-loader": "^8.2.2",
    "cypress": "^6.5.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "cypress-localstorage-commands": "^1.4.0",
    "eslint-plugin-cypress": "^2.11.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "webpack": "^4.46.0"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  }
}
