
{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@centreon/ui/*": ["@centreon/ui/src/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"], 
    "esModuleInterop": true,
  },
  "include": [
    "./www/front_src/src"
  ],
  "exclude": [
    "node_modules"
  ]
}