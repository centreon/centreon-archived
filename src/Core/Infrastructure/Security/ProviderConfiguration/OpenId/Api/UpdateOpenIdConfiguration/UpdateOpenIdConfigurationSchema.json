{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update local provider configuration",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "is_active",
        "is_forced",
        "trusted_client_addresses",
        "blacklist_client_addresses",
        "base_url",
        "authorization_endpoint",
        "token_endpoint",
        "introspection_token_endpoint",
        "userinfo_endpoint",
        "endsession_endpoint",
        "connection_scopes",
        "login_claim",
        "client_id",
        "client_secret",
        "authentication_type",
        "verify_peer"
    ],
    "properties": {
      "is_active": {
        "type": "boolean"
      },
      "is_forced": {
        "type": "boolean"
      },
      "trusted_client_addresses": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "blacklist_client_addresses": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "base_url": {
        "type": "string"
      },
      "authorization_endpoint": {
        "type": "string"
      },
      "token_endpoint": {
        "type": "string"
      },
      "introspection_token_endpoint": {
        "type": "string"
      },
      "userinfo_endpoint": {
        "type": "string"
      },
      "endsession_endpoint": {
        "type": "string"
      },
      "connection_scopes": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "login_claim": {
        "type": "string"
      },
      "client_id": {
        "type": "string"
      },
      "client_secret": {
        "type": "string"
      },
      "authentication_type": {
        "enum": ["client_secret_post", "client_secret_basic"]
      },
      "verify_peer": {
        "type": "boolean"
      }
    }
}