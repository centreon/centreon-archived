{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update OpenID configuration",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "is_active",
        "is_forced",
        "trusted_client_addresses",
        "blacklist_client_addresses",
        "base_url",
        "authorization_endpoint",
        "token_endpoint",
        "introspection_token_endpoint",
        "userinfo_endpoint",
        "endsession_endpoint",
        "connection_scopes",
        "login_claim",
        "client_id",
        "client_secret",
        "authentication_type",
        "verify_peer",
        "auto_import",
        "contact_template",
        "email_bind_attribute",
        "alias_bind_attribute",
        "fullname_bind_attribute"
    ],
    "properties": {
      "is_active": {
        "type": "boolean"
      },
      "is_forced": {
        "type": "boolean"
      },
      "trusted_client_addresses": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "blacklist_client_addresses": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "base_url": {
        "type": ["string", "null"]
      },
      "authorization_endpoint": {
        "type": ["string", "null"]
      },
      "token_endpoint": {
        "type": ["string", "null"]
      },
      "introspection_token_endpoint": {
        "type": ["string", "null"]
      },
      "userinfo_endpoint": {
        "type": ["string", "null"]
      },
      "endsession_endpoint": {
        "type": ["string", "null"]
      },
      "connection_scopes": {
        "type": "array",
        "items": {
            "type": "string"
        }
      },
      "login_claim": {
        "type": ["string", "null"]
      },
      "client_id": {
        "type": ["string", "null"]
      },
      "client_secret": {
        "type": ["string", "null"]
      },
      "authentication_type": {
        "enum": ["client_secret_post", "client_secret_basic"]
      },
      "verify_peer": {
        "type": "boolean"
      },
      "auto_import": {
        "type": "boolean"
      },
      "contact_template": {
        "type": ["object", "null"],
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "email_bind_attribute": {
        "type": ["string", "null"]
      },
      "alias_bind_attribute": {
        "type": ["string", "null"]
      },
      "fullname_bind_attribute": {
        "type": ["string", "null"]
      }
    }
}