{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Update platform versions",
    "type": "object",
    "additionalProperties": false,
    "required": ["components"],
    "properties": {
        "components": {
            "type": "array",
            "minItems": 1,
            "maxItems": 1,
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": ["name"],
                "properties": {
                    "name": {
                        "type": "string",
                        "enum": ["centreon-web"]
                    }
                }
            }
        }
    }
}