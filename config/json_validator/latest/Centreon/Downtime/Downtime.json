{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Add downtime to a host or a service",
    "type": "object",
    "required": ["start_time", "end_time", "is_fixed", "duration", "comment"],
    "additionalProperties": false,
    "properties": {
        "start_time": {
            "type": "string",
            "format": "date-time"
        },
        "end_time" : {
            "type": "string",
            "format": "date-time"
        },
        "is_fixed": {
            "type": "boolean"
        },
        "duration": {
            "type": "integer"
        },
        "author_id": {
            "type": "integer"
        },
        "comment": {
            "type": "string"
        },
        "with_services": {
            "type": "boolean",
            "default": false
        }
    }
}
