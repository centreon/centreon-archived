  "required": ["server_name", "server_type", "ip_address"],
  "additionalProperties": true,
  "properties": {
    "server_name": {
      "type": "string"
    },
    "server_type": {
      "type": "integer"
    },
    "ip_address": {
      "type": "string"
    },
    "server_parent": {
      "type": "string"
    }
  }
}