{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Patch a platform information",
  "type": "object",
  "additionalProperties": false,
  "properties": {
      "version": {
        "type": "string"
      },
      "appKey": {
        "type": "string"
      },
      "isRemote": {
        "type": "boolean"
      },
      "isCentral": {
        "type": "boolean"
      },
      "centralServerAddress": {
        "type": "string"
      },
      "apiUsername": {
        "type": "string"
      },
      "apiCredentials": {
        "type": "string"
      },
      "apiScheme": {
        "type": "string"
      },
      "apiPort": {
        "type": "integer"
      },
      "apiPath": {
        "type": "string"
      },
      "peerValidation": {
        "type": "boolean"
      }
  }
}