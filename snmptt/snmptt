my $syslog_facility;
my @syslog_level_alert;
my @syslog_level_crit;
my @syslog_level_err;
my @syslog_level_warning;
my @syslog_level_notice;
my @syslog_level_info;
my @syslog_level_debug;
my $syslog_level;
